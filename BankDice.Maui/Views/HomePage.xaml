<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BankDice.Maui.Views.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Home">

    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label Text="{Binding Title}" FontSize="28" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Text="{Binding RulesText}" FontSize="14" />

            <Button Text="{Binding StartButtonText}"
                    Command="{Binding StartOrRestartCommand}"
                    WidthRequest="250"
                    HorizontalOptions="Center"
                    BackgroundColor="#1976D2"
                    TextColor="White"
                    CornerRadius="8" />

            <Button Text="Go to Setup"
                    Command="{Binding GoSetupCommand}"
                    WidthRequest="250"
                    HorizontalOptions="Center"
                    BackgroundColor="#29B6F6"
                    TextColor="White"
                    CornerRadius="8" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
